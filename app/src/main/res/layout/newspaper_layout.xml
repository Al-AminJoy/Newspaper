<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin4dp"
    android:layout_marginLeft="@dimen/margin4dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_news"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen4dp"
        app:cardElevation="@dimen/dimen2dp"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <ImageView
               android:id="@+id/iv_news_paper"
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:src="@drawable/jugantar"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/newspaper_view"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:scaleType="fitXY"
               />
            <View
                android:id="@+id/newspaper_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/iv_news_paper"
                android:background="@color/basicLight"/>
            <TextView
                android:id="@+id/tv_news_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Jugantar"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeM"
               app:layout_constraintTop_toTopOf="@id/newspaper_view"
                app:layout_constraintBottom_toBottomOf="@id/newspaper_view"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="@dimen/padding4dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>